    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.it342.e_vents.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_tickets"
        android:name="com.it342.e_vents.ui.tickets.TicketsFragment"
        android:label="Tickets"
        tools:layout="@layout/fragment_tickets" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.it342.e_vents.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
